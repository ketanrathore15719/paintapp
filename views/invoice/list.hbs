<div class="main-panel">        
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">List of Products</h4>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Total</th>
                          <th>View Invoice</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each invoices}}
                            <tr>
                            <td>{{customerName}}</td>
                            <td>{{totalWithGst}}</td>
                            <td><a href="/invoice/{{this._id}}">Invoice {{this._id}}</a></td>
                            </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
